
-- STEP 2: Add necessary columns to tables
ALTER TABLE tables 
  ADD COLUMN IF NOT EXISTS table_type VARCHAR(50) DEFAULT 'Regular',
  ADD COLUMN IF NOT EXISTS description TEXT,
  ADD COLUMN IF NOT EXISTS price_per_hour DECIMAL(10,2) DEFAULT 0,
  ADD COLUMN IF NOT EXISTS status VARCHAR(20) DEFAULT 'Available';
-- STEP 3: Add columns to reservation table
ALTER TABLE reservation 
  ADD COLUMN IF NOT EXISTS event_type VARCHAR(100) DEFAULT 'Regular Dining',
  ADD COLUMN IF NOT EXISTS status VARCHAR(50) DEFAULT 'Pending',
  ADD COLUMN IF NOT EXISTS guest_count INT DEFAULT 1,
  ADD COLUMN IF NOT EXISTS special_requests TEXT,
  ADD COLUMN IF NOT EXISTS total_hours INT DEFAULT 2,
  ADD COLUMN IF NOT EXISTS total_price DECIMAL(10,2) DEFAULT 0;
